<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<Button android:id="@+id/voice" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" android:layout_alignParentTop="true"
		android:layout_marginTop="92dp" android:text="Start" />

	<TextView android:id="@+id/recorded" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:layout_centerVertical="true" android:text="Recorded"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<Button android:text="Next" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/vrnextactivity"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:layout_marginRight="16dp"
		android:layout_marginBottom="16dp" android:layout_toRightOf="@+id/recorded"></Button>

</RelativeLayout>
