<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView android:text="Post your Message!!!"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:layout_marginTop="118dp"></TextView>
	<EditText android:layout_height="wrap_content" android:id="@+id/editTextmsg"
		android:hint="type your message" android:layout_width="match_parent"
		android:layout_below="@+id/textView1" android:layout_alignParentLeft="true"
		android:layout_marginTop="55dp"></EditText>
	<Button android:text="Post" android:paddingLeft="30dp"
		android:paddingRight="30dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/twitternxtbutton"
		android:layout_below="@+id/editTextmsg" android:layout_alignLeft="@+id/textView1"
		android:layout_marginLeft="40dp" android:layout_marginTop="35dp"></Button>

</RelativeLayout>
